<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_noticias"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imagenView_foto_noticias"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mundial" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/textView_fecha_noticia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19/03/86 "
                    android:textSize="11sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/textView_titulo_noticia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_fecha_noticia"
                    android:layout_marginBottom="5dp"
                    android:maxLines="2"
                    android:text="Torneo San Martin 2018 Universidad NacionaL de Salta "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_cuerpo_noticia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_titulo_noticia"
                    android:maxLines="2"
                    android:text="Esta es una noticias que se tiene en cuenta nuevas noticas para todo el sdf"
                    android:textColor="@android:color/black" />



            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/layout_noticia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:elevation="5dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:elevation="5dp"

                app:srcCompat="@drawable/action_check" />
        </RelativeLayout>


    </FrameLayout>


</RelativeLayout>
